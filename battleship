 <body>
  <h1>Давай играть в МОРСКОЙ, нахер, БОЙ!!!<h1>
 <script>
var randomLoc = Math.floor(Math.random() * 5);
var ShipPiece1 = randomLoc;
var ShipPiece2 = ShipPiece1+1;
var ShipPiece3 = ShipPiece1+1;
var Attempt;
var Shot = 0;
var Attempts = 0;
var IsKilled = false;
while (IsKilled == false) {
    Attempt = prompt ("ОГОНЬ! (Введите число от 0 до 6)");
    if (Attempt < 0 || Attempt > 6) {
        alert("Чо тупишь? От 0 до 6 же сказали!!!");
    } else {
        Attempts = Attempts + 1;
    }
    if (Attempt == ShipPiece1 || Attempt == ShipPiece2 || Attempt == ShipPiece3) {
        Shot = Shot + 1;
        alert("АЙ!!! Больно же!!!");
        if (Shot == 3) {
            IsKilled = true;
            alert("Ну все,все! Молодец! Утопил кораблик.");
        }
    } else {
        alert("АХАХАХА!!! Косопузый!!!");
    }

}
var stats = "У тебя заняло" + " " + Attempts + " " + "попыток утопить кораблик. ЛОХ!!!)";
alert(stats);
    </script>
